<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_choose_cuisine"
        style="@style/relLayoutStyle"
        tools:context="com.mja.intercontenentalhotel.Cuisine">

        <TextView
            style="@style/headerLogo"/>

        <TextView
            android:text="@string/cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="25dp"
            android:id="@+id/textView"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold"
            android:fontFamily="serif" />

        <RadioGroup
            android:id="@+id/cuisineRadioGrp"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="@string/america"
                android:layout_marginTop="25dp"
                android:id="@+id/btnAmerican"
                style="@style/selectCuisine"/>

            <RadioButton
                android:text="@string/italy"
                android:layout_below="@+id/btnAmerican"
                android:layout_alignStart="@+id/btnAmerican"
                android:layout_marginTop="25dp"
                android:id="@+id/btnItalian"
                style="@style/selectCuisine"/>

            <RadioButton
                android:text="@string/china"
                android:layout_below="@+id/btnItalian"
                android:layout_alignStart="@+id/btnItalian"
                android:layout_marginTop="25dp"
                android:id="@+id/btnChinese"
                style="@style/selectCuisine"/>

        </RadioGroup>
        <Button
            android:text="@string/next"
            android:textSize="24sp"
            android:layout_below="@+id/cuisineRadioGrp"
            android:layout_marginTop="25dp"
            android:onClick="nextResPage"
            style="@style/btnStyle"
            android:id="@+id/btnNextCuisine" />
    </RelativeLayout>
</ScrollView>