<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_restaurant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mja.ahmedkhairalab5_ex1.RestaurantActivity">
        <TextView
            style="@style/headerLogo"
            android:id="@+id/ownerName"/>

        <TextView
            style="@style/logoStyle"
            android:text="@string/chooseRestaurant"
            android:layout_below="@+id/ownerName"
            android:id="@+id/titleRes" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/titleRes"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/resList"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            </ListView>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>